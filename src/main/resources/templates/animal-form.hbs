{{#partial "content"}}
<h1 class="text-center">RECORD THE ANIMALS' STATUS</h1>
<div class="container">
<form action="/succ" method="post" class="form">
    <label for="rname">Ranger name</label><br>
    <input id="rangerName" name="rangerName" type="text" class="form-control"><br>
    <label for="name">Animal Name</label><br>
    <input id="animalName" name="animalName" type="text" class="form-control"><br>
<label for="health">Health</label>
    <select id="health" name="health">
        <option>Healthy</option>
        <option>Okay</option>
    </select><br>
    <label for="age">Age</label>
    <select id="age" name="age">
        <option>Newborn</option>
        <option>Young</option>
        <option>Adult</option>
    </select><br>
    <label for="sighting">Found in</label>
    <select id="location" name="location">
        <option>Zone A</option>
        <option>Zone B</option>
        <option>Zone C</option>
    </select> <br><br>
   <button type="submit" class="btn btn-success">Submit</button>
</form>
</div>
{{/partial}}
{{>layout.hbs}}