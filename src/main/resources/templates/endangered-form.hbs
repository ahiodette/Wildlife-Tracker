{{#partial "content"}}
<h1>RECORD THE ANIMALS' STATUS</h1>
<form action="/endsucc" method="post" class="form">
    <label for="rname">Ranger name</label><br>
    <input id="rname" name="rangerName" type="text" class="form-control"><br>
    <label for="name">Animal Name</label><br>
    <input id="name" name="animalName" type="text" class="form-control"><br>
<label for="health">Health</label>
    <select id="health" name="health">
        <option>Ill</option>
    </select><br>
    <label for="age">Age</label>
    <select id="age" name="age">
        <option>Newborn</option>
        <option>Young</option>
        <option>Adult</option>
    </select><br>
    <label for="sighting">Found in</label>
    <select id="location" name="location">
        <option>Zone A</option>
        <option>Zone B</option>
        <option>Zone C</option>
    </select> <br><br>
    <button type="submit" class="btn btn-warning">Submit</button>
</form>
{{/partial}}
{{>layout.hbs}}