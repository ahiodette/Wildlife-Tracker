{{#partial "content"}}
<h1>RECORD THE ANIMALS' STATUS</h1>
<form action="/endsucc" method="post" class="form">
    <label for="ername">Ranger name</label><br>
    <input id="rname" name="erangerName" type="text" class="form-control"><br>
    <label for="eanimalName">Animal Name</label><br>
    <input id="name" name="eanimalName" type="text" class="form-control"><br>
<label for="ehealth">Health</label>
    <select id="ehealth" name="ehealth">
        <option>Ill</option>
    </select><br>
    <label for="eage">Age</label>
    <select id="eage" name="eage">
        <option>Newborn</option>
        <option>Young</option>
        <option>Adult</option>
    </select><br>
    <label for="esighting">Found in</label>
    <select id="elocation" name="elocation">
        <option>Zone A</option>
        <option>Zone B</option>
        <option>Zone C</option>
    </select> <br><br>
    <button type="submit" class="btn btn-warning">Submit</button>
</form>
{{/partial}}
{{>layout.hbs}}