{{#partial "content"}}

<div class="container">
    <img src="https://media.tenor.com/images/ca318adcef3e74ee90c41e09dd8ebdcb/tenor.gif" height=50 width=60 alt="">
<h1 class="text-center"> HEALTHY ANIMALS' SIGHTINGS RECORDS</h1><br><br>

<div class="container">
    <div class="row" style="font-size: 2em;">
        <div class="col-sm-2">
            Ranger Name
        </div>
        <div class="col-sm-2">
            Animal  Name
        </div>
        <div class="col-sm-2">
            Animal Healthy
        </div>
        <div class="col-sm-2">
            Animal Age
        </div>
        <div class="col-sm-2">
            Location
        </div>
    </div>
    <hr >

    {{#if animal}}
    {{#each animal}}
    <div class="row">
            <div class="col-sm-2">
                {{ranger_name}}
            </div>
            <div class="col-sm-2">
                {{animal_name}}
            </div>
            <div class="col-sm-2">
                {{health}}
            </div>
            <div class="col-sm-2">
                {{age}}
            </div>
            <div class="col-sm-2">
                {{location}}
            </div>
        </div> <br><br>

    {{/each}}
{{/if}}

<a class="btn btn-success stretched-link" href="/">Back</a>
    <a class="btn btn-success stretched-link" href="/details">List all animals</a>
</div>

</div>
{{/partial}}
{{>layout.hbs}}